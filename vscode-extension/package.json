    "viewsContainers": {
      "activitybar": [
        {
          "id": "hivemind",
          "title": "Hive Mind",
          "icon": "assets/icon.svg"
        }
      ]
    },
    "views": {
      "hivemind": [
        {
          "id": "mindhive.chatView",
          "name": "Chat",
          "type": "webview",
          "icon": "$(comment-discussion)",
          "contextualTitle": "MindHive Chat"
        },
        {
          "id": "mindhive.insights",
          "name": "Global Insights",
          "icon": "assets/icon.svg",
          "contextualTitle": "Hive Mind Insights"
        },
        {
          "id": "mindhive.agents",
          "name": "AI Agents",
          "icon": "assets/icon.svg",
          "contextualTitle": "Agent Status"
        },
        {
          "id": "mindhive.alerts",
          "name": "Self-Healing Alerts",
          "icon": "assets/icon.svg",
          "contextualTitle": "Security & Healing"
        }
      ]
    },
    "configuration": {
      "title": "Hive Mind",
      "properties": {
        "mindhive.apiUrl": {
          "type": "string",
          "default": "http://localhost:3000",
          "description": "Hive Mind API URL"
        },
        "mindhive.wsUrl": {
          "type": "string",
          "default": "ws://localhost:3000",
          "description": "WebSocket URL"
        },
        "mindhive.nexusStrictness": {
          "type": "string",
          "enum": [
            "low",
            "medium",
            "high"
          ],
          "default": "high",
          "description": "Nexus verification strictness level"
        },
        "mindhive.showInlineInsights": {
          "type": "boolean",
          "default": true,
          "description": "Show inline global intelligence insights"
        },
        "mindhive.predictiveMode": {
          "type": "boolean",
          "default": true,
          "description": "Enable predictive coding assistant"
        },
        "mindhive.autoFix": {
          "type": "boolean",
          "default": false,
          "description": "Automatically apply high-confidence fixes"
        },
        "mindhive.preferredModels": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "openai",
              "anthropic",
              "google",
              "grok",
              "ollama"
            ]
          },
          "default": [
            "anthropic",
            "openai"
          ],
          "description": "Preferred AI models for code generation"
        },
        "mindhive.preview.customPorts": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "default": [],
          "description": "Custom ports to scan for development servers"
        },
        "mindhive.preview.autoReload": {
          "type": "boolean",
          "default": true,
          "description": "Enable hot reload for browser preview"
        },
        "mindhive.preview.reloadDelay": {
          "type": "number",
          "default": 300,
          "description": "Debounce delay in milliseconds before reloading preview"
        },
        "mindhive.preview.deviceEmulation": {
          "type": "string",
          "enum": [
            "desktop",
            "mobile",
            "tablet"
          ],
          "default": "desktop",
          "description": "Default device emulation mode for preview"
        },
        "mindhive.deployment.vercelToken": {
          "type": "string",
          "default": "",
          "description": "Vercel API access token"
        },
        "mindhive.deployment.netlifyToken": {
          "type": "string",
          "default": "",
          "description": "Netlify API access token"
        },
        "mindhive.deployment.railwayToken": {
          "type": "string",
          "default": "",
          "description": "Railway API access token"
        },
        "mindhive.deployment.autoBuild": {
          "type": "boolean",
          "default": true,
          "description": "Automatically run build before deployment"
        },
        "mindhive.deployment.defaultPlatform": {
          "type": "string",
          "enum": [
            "vercel",
            "netlify",
            "railway",
            "auto"
          ],
          "default": "auto",
          "description": "Default deployment platform (auto-detect if 'auto')"
        },
        "mindhive.collaboration.enableWebRTC": {
          "type": "boolean",
          "default": true,
          "description": "Enable WebRTC peer-to-peer collaboration"
        },
        "mindhive.collaboration.enableIndexedDB": {
          "type": "boolean",
          "default": true,
          "description": "Enable local persistence with IndexedDB"
        },
        "mindhive.collaboration.showCursors": {
          "type": "boolean",
          "default": true,
          "description": "Show collaborator cursors in real-time"
        },
        "mindhive.collaboration.showSelections": {
          "type": "boolean",
          "default": true,
          "description": "Show collaborator selections in real-time"
        },
        "mindhive.collaboration.showNameplates": {
          "type": "boolean",
          "default": true,
          "description": "Show name labels above collaborator cursors"
        },
        "mindhive.collaboration.enableAI": {
          "type": "boolean",
          "default": true,
          "description": "Enable AI collaborator features"
        },
        "mindhive.collaboration.maxParticipants": {
          "type": "number",
          "default": 20,
          "description": "Maximum number of participants in a session"
        },
        "mindhive.collaboration.idleTimeout": {
          "type": "number",
          "default": 30000,
          "description": "Idle timeout in milliseconds (default: 30 seconds)"
        }
      }
    },
    "keybindings": [
      {
        "command": "mindhive.openPreview",
        "key": "ctrl+shift+p",
        "mac": "cmd+shift+p",
        "when": "editorTextFocus"
      },
      {
        "command": "mindhive.refreshPreview",
        "key": "ctrl+alt+r",
        "mac": "cmd+alt+r"
      },
      {
        "command": "mindhive.ask",
        "key": "ctrl+shift+h",
        "mac": "cmd+shift+h"
      },
      {
        "command": "mindhive.inlineChat",
        "key": "ctrl+i",
        "mac": "cmd+i",
        "when": "editorTextFocus"
      },
      {
        "command": "mindhive.quickEdit",
        "key": "ctrl+k",
        "mac": "cmd+k",
        "when": "editorTextFocus && !inQuickOpen"
      },
      {
        "command": "mindhive.terminalCommand",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t"
      },
      {
        "command": "mindhive.agentMode",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a"
      },
      {
        "command": "mindhive.agentQuick",
        "key": "ctrl+shift+q",
        "mac": "cmd+shift+q",
        "when": "editorTextFocus"
      },
      {
        "command": "mindhive.chat",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c"
      },
      {
        "command": "mindhive.generateCode",
        "key": "ctrl+shift+g",
        "mac": "cmd+shift+g"
      },
      {
        "command": "mindhive.verifyCode",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v"
      },
      {
        "command": "mindhive.timeTravelDebug",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e",
        "when": "editorTextFocus"
      },
      {
        "command": "mindhive.deploy",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d"
      },
      {
        "command": "mindhive.toggleHUD",
        "key": "ctrl+shift+h ctrl+h",
        "mac": "cmd+shift+h cmd+h",
        "when": "editorTextFocus"
      },
      {
        "command": "mindhive.showDeploymentPanel",
        "key": "ctrl+alt+d",
        "mac": "cmd+alt+d"
      },
      {
        "command": "mindhive.startCollaboration",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c"
      },
      {
        "command": "mindhive.showCollabPanel",
        "key": "ctrl+alt+c",
        "mac": "cmd+alt+c"
      },
      {
        "command": "mindhive.createComment",
        "key": "ctrl+shift+m",
        "mac": "cmd+shift+m"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "mindhive.quickEdit",
          "group": "hivemind@0",
          "when": "editorHasSelection || editorTextFocus"
        },
        {
          "command": "mindhive.inlineChat",
          "group": "hivemind@1",
          "when": "editorHasSelection || editorTextFocus"
        },
        {
          "command": "mindhive.generateCode",
          "group": "hivemind@2"
        },
        {
          "command": "mindhive.verifyCode",
          "group": "hivemind@3"
        },
        {
          "command": "mindhive.optimizeCode",
          "group": "hivemind@4"
        },
        {
          "command": "mindhive.fixBug",
          "group": "hivemind@5"
        },
        {
          "command": "mindhive.timeTravelDebug",
          "group": "hivemind@6"
        }
      ],
      "view/title": [
        {
          "command": "mindhive.chat",
          "when": "view == mindhive.chatView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --minify",
    "watch": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --sourcemap --watch",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/archiver": "^7.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.19.10",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "archiver": "^6.0.1",
    "axios": "^1.6.2",
    "socket.io-client": "^4.7.2",
    "y-indexeddb": "^9.0.12",
    "y-webrtc": "^10.3.0",
    "yjs": "^13.6.27",
    "zod": "^3.22.4"
  }
}
