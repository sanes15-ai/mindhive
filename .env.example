# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/hivemind?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=7d

# AI Model Providers
# OpenAI
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_ORG_ID=

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Google Gemini
GOOGLE_API_KEY=your-google-api-key-here

# Grok (xAI)
GROK_API_KEY=your-grok-api-key-here
GROK_API_URL=https://api.x.ai/v1

# Ollama (Local)
OLLAMA_HOST=http://localhost:11434

# Vector Database
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=hivemind-code-intelligence

# WebSocket
WEBSOCKET_PORT=3001
WEBSOCKET_CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
ENABLE_METRICS=true
GRAFANA_URL=http://localhost:3030
PROMETHEUS_PORT=9090

# Feature Flags
ENABLE_SELF_HEALING=true
ENABLE_PREDICTIVE_INTELLIGENCE=true
ENABLE_GLOBAL_PATTERNS=true
ENABLE_ENTERPRISE_FEATURES=true

# Security
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3002
ENABLE_HELMET=true
ENABLE_CORS=true

# Agent Configuration
AGENT_CODEGEN_ENABLED=true
AGENT_SENTINEL_ENABLED=true
AGENT_OPTIMIZER_ENABLED=true
AGENT_SECURITY_ENABLED=true
AGENT_ORACLE_ENABLED=true

# Confidence Thresholds
AUTO_DEPLOY_CONFIDENCE_THRESHOLD=0.90
PATTERN_ACCEPTANCE_THRESHOLD=0.75
SECURITY_SCAN_THRESHOLD=0.95

# Enterprise
ENTERPRISE_LICENSE_KEY=
ENABLE_KNOWLEDGE_MAPS=true
ENABLE_ONBOARDING_AUTOMATION=true
